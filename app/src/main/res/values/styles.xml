<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Basic" parent="AppTheme" >
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColorPrimary">@color/black</item>

        <!-- Raised Button Style -->
        <item name="colorButtonNormal">@color/colorAccent</item>
        <!-- ListView Packliste -->

        <item name="android:listViewStyle">@style/itemList</item>
        <item name="android:spinnerItemStyle">@style/TextViewSpinnerItem</item>

        <item name="android:datePickerDialogTheme" tools:targetApi="lollipop">@style/CustomDatePickerDialogTheme</item>
    </style>
    <style name="Basic.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="itemList" parent="android:style/Widget.ListView">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:divider">@color/mediumGrey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@color/colorAccent</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="CustomDatePickerDialogTheme" parent="android:Theme.Material.Dialog" tools:targetApi="lollipop">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="Basic.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Basic.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ItemViewTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
</resources>
