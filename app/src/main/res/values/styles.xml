<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Basic" parent="AppTheme" >
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Raised Button Style -->
        <item name="colorButtonNormal">@color/colorAccent</item>

        <!-- ListView Packliste -->
        <item name="android:listViewStyle">@style/itemList</item>
    </style>

    <style name="itemList" parent="android:style/Widget.ListView">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:divider">@color/lightGrey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@color/colorAccent</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>
    <style name="Basic.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Basic.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Basic.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
